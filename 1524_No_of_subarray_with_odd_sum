class Solution {
public:
    int numOfSubarrays(vector<int>& nums) {
        int odd=0;
        int even=1;
        long long int sum=0;
        long long int ans=0;
        for(int i=0;i<nums.size();i++){
            sum+=nums[i];
            
            if(sum%2==0){
                ans+=odd;

                even++;
            }
            else{
                ans+=even;
                odd++;
            }
         //   cout<<ans;
        }
        return ans%(1000000007);
    }
};